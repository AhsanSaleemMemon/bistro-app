<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/man"
        android:id="@+id/photo_id"
        />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_id"
        android:layout_toRightOf="@+id/photo_id"
        android:text="HELLO WORLD"
        android:textColor="@color/white"
        />

    <TextView
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_id"
        android:text="I'm going to France"
        android:layout_below="@+id/name_id"
        android:layout_toRightOf="@id/photo_id"
        />

    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/name_id"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/time_id"
        android:text="16:00"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/message_id"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/readstatus_id"
        android:text="."
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_alignTop="@id/time_id"
        android:textColor="@color/purple_500"
        android:layout_below="@+id/time_id"
        />

</RelativeLayout>